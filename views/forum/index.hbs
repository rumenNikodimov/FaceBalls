<div class="container body-content">
    <div class="well">
        <div class="row">
            {{#each articles}}
                <div class="col-md-6">
                    <article>
                        <header>
                            <h2>{{this.title}}</h2>
                        </header>

                        <p>
                            {{this.content}}
                        </p>

                        <small class="author">
                            {{this.author.fullName}}
                        </small>

                        <footer>
                            <div class="pull-right">
                                <a class="btn btn-default btn-xs" href="/forum/article/details/{{this.id}}">Read more &raquo;</a>
                            </div>
                        </footer>
                    </article>
                </div>
            {{/each}}
        </div>
    </div>
</div>