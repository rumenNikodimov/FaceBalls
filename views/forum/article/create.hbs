<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" method="post" action="/forum/article/create" enctype="multipart/form-data">
            <fieldset>
                <legend>New Post</legend>

                {{#if error}}
                    {{error}}
                {{/if}}
                <div class="form-group">
                    <label class="col-sm-4 control-label">Article Title</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="articleTitle" placeholder="Article Title" name="title" required>
                    </div>
                </div>

                <div class="form-group">
                <label class="col-sm-4 control-label">Content</label>
                <div class="col-sm-6">
                    <textarea class="form-control" rows="5" id="articleContent" name="content" required></textarea>
                </div>
            </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label">Image</label>
                    <div class="col-sm-6">
                        <input class="form-control"  id="image" name="image" type="file">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <button type="reset" class="btn btn-default">Cancel</button>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>