<script>
    let spaceSimulation = new SpaceSimulation('renderCanvas');
    spaceSimulation.render();

    let togglePause = () => {
        spaceSimulation.isPaused = !spaceSimulation.isPaused;
        $('#simulation-toggle').toggleClass('fa-pause').toggleClass('fa-play');
    };

    let randomNum = (min, max) => {
        if(min === max) return min;
        return Math.random() * (max - min) + min;
    };

    let spaceBalls = new SpaceBalls('renderCanvas');
    spaceBalls.render();
</script>

<div id="game-over" class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" method="post" action="/game">
            <fieldset>
                <legend>Demise!</legend>

                <p>After millenias of roaming in the Cosmos, your journey has come to an end... But have no fear! Press New Game to try again!</p>
                <input type="number" class="form-control" id="game-submit" name="score" readonly>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <button type="submit" class="btn btn-primary" onclick="spaceBalls.resetGame()">Submit</button>
                    </div>
